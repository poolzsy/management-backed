<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lilac.mapper.AdminMapper">
    <insert id="save">
        insert into admin (username,name,phone,email) values (#{username},#{name},#{phone},#{email})
    </insert>

    <select id="selectPage" resultType="com.lilac.entity.Admin">
       select * from admin
       <where>
           <if test="name != null">
               name like concat('%',#{name},'%')
           </if>
       </where>
       order by id desc
    </select>
</mapper>